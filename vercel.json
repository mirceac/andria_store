{
        "version": 2,
        "builds": [
          {
            "src": "server/index.ts",
            "use": "@vercel/node",
            "config": {
              "includeFiles": ["server/**/*", "db/**/*", "tsconfig.json"],
              "nodeVersion": "18.x",
              "compilerOptions": {
                "moduleResolution": "bundler",
                "allowImportingTsExtensions": true,
                "paths": {
                  "@db": ["./db/index.ts"],
                  "@db/*": ["./db/*"],
                  "@/*": ["./client/src/*"]
                }
              }
            }
          },
          {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
              "buildCommand": "npm run build",
              "outputDirectory": "dist/public"
            }
          }
        ],
        "routes": [
          {
            "src": "/api/(.*)",
            "dest": "/server/index.ts"
          },
          {
            "handle": "filesystem"
          },
          {
            "src": "/(.*)",
            "dest": "/dist/public/index.html"
          }
        ]
      }