{
        "version": 2,
        "builds": [
          {
            "src": "server/index.ts",
            "use": "@vercel/node"
          },
          {
            "src": "client/index.html",
            "use": "@vercel/static-build",
            "config": {
              "buildCommand": "cd client && npm install && npm run build",
              "outputDirectory": "client/dist",
              "distDir": "client/dist"
            }
          }
        ],
        "routes": [
          {
            "src": "/api/(.*)",
            "dest": "server/index.ts"
          },
          {
            "src": "/auth/(.*)",
            "dest": "server/index.ts"
          },
          {
            "src": "/stripe-webhook",
            "dest": "server/index.ts"
          },
          {
            "handle": "filesystem"
          },
          {
            "src": "/(.*)",
            "dest": "/client/dist/index.html"
          }
        ]
      }